<section id="contact" class="py-32 lg:py-48 border-t border-white/10">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 lg:gap-24 items-start">
      <!-- Left column -->
      <div class="reveal">
        <p class="text-sm tracking-widest text-gray-500 uppercase mb-6">
          Get in Touch
        </p>
        <h2 class="text-4xl md:text-5xl font-light tracking-tight mb-8">
          Ready to modernize medication monitoring?
        </h2>
        <p class="text-gray-500 font-light leading-relaxed mb-10 text-lg">
          Whether you're an independent pharmacy, health system, or prescriber
          group, we'd like to hear from you. Edict is built specifically for
          Wisconsin's regulatory environment and integrates with your existing
          pharmacy management systems.
        </p>
        <p class="mb-12">
          <a
            href="mailto:contact@edict.health"
            class="text-gray-400 hover:text-white transition-colors duration-300 text-base"
          >
            contact@edict.health
          </a>
        </p>
        <div class="flex flex-col gap-3 border-t border-white/10 pt-8">
          <span class="text-sm text-gray-600 tracking-widest uppercase">HIPAA-Compliant Platform</span>
          <span class="text-sm text-gray-600 tracking-widest uppercase">Built for Wisconsin Healthcare</span>
        </div>
      </div>

      <!-- Right column: form -->
      <div class="reveal">
        <form
          name="contact"
          method="POST"
          data-netlify="true"
          netlify-honeypot="bot-field"
          action="/thank-you"
          class="space-y-8"
        >
          <input type="hidden" name="form-name" value="contact" />
          <p class="hidden">
            <label>
              Don't fill this out: <input name="bot-field" />
            </label>
          </p>

          <!-- Full Name -->
          <div>
            <label for="name" class="block text-sm tracking-widest uppercase text-gray-500 mb-3">
              Full Name
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              autocomplete="name"
              placeholder="Jane Smith"
              class="w-full bg-transparent border-0 border-b border-white/10 px-0 py-3 text-white text-base font-light placeholder-gray-700 focus:border-white/30 transition-colors duration-300"
            />
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="block text-sm tracking-widest uppercase text-gray-500 mb-3">
              Email Address
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              autocomplete="email"
              placeholder="jane@pharmacy.com"
              class="w-full bg-transparent border-0 border-b border-white/10 px-0 py-3 text-white text-base font-light placeholder-gray-700 focus:border-white/30 transition-colors duration-300"
            />
          </div>

          <!-- Organization -->
          <div>
            <label for="organization" class="block text-sm tracking-widest uppercase text-gray-500 mb-3">
              Organization
            </label>
            <input
              type="text"
              id="organization"
              name="organization"
              required
              autocomplete="organization"
              placeholder="Main Street Pharmacy"
              class="w-full bg-transparent border-0 border-b border-white/10 px-0 py-3 text-white text-base font-light placeholder-gray-700 focus:border-white/30 transition-colors duration-300"
            />
          </div>

          <!-- Role -->
          <div>
            <label for="role" class="block text-sm tracking-widest uppercase text-gray-500 mb-3">
              Role
            </label>
            <select
              id="role"
              name="role"
              class="w-full bg-transparent border-0 border-b border-white/10 px-0 py-3 text-white text-base font-light focus:border-white/30 transition-colors duration-300 appearance-none"
            >
              <option value="" disabled selected class="bg-black">Select your role</option>
              <option value="pharmacist" class="bg-black">Pharmacist</option>
              <option value="pharmacy-technician" class="bg-black">Pharmacy Technician</option>
              <option value="provider" class="bg-black">Provider</option>
              <option value="administrator" class="bg-black">Administrator</option>
              <option value="other" class="bg-black">Other</option>
            </select>
          </div>

          <!-- Message -->
          <div>
            <label for="message" class="block text-sm tracking-widest uppercase text-gray-500 mb-3">
              Message <span class="normal-case tracking-normal text-gray-700">(optional)</span>
            </label>
            <textarea
              id="message"
              name="message"
              rows="3"
              placeholder="Tell us about your pharmacy or how we can help..."
              class="w-full bg-transparent border-0 border-b border-white/10 px-0 py-3 text-white text-base font-light placeholder-gray-700 focus:border-white/30 transition-colors duration-300 resize-none"
            ></textarea>
          </div>

          <!-- Privacy checkbox -->
          <div class="flex items-start gap-3">
            <input
              type="checkbox"
              id="privacy"
              name="privacy"
              required
              class="mt-1 w-3.5 h-3.5 border-white/10 bg-transparent text-white shrink-0"
            />
            <label for="privacy" class="text-sm text-gray-600 leading-relaxed">
              I agree to the Privacy Policy and understand this form does not
              collect Protected Health Information (PHI).
            </label>
          </div>

          <!-- Submit -->
          <button
            type="submit"
            class="w-full border border-white/20 hover:border-white/50 text-white text-sm tracking-widest uppercase py-4 hover:bg-white/5 transition-all duration-300"
          >
            Send Message <span class="ml-2">&rarr;</span>
          </button>

          <!-- HIPAA notice -->
          <p class="text-xs text-gray-700 leading-relaxed">
            This contact form is for general inquiries only. Do not submit any
            Protected Health Information (PHI) or patient data through this form.
          </p>
        </form>
      </div>
    </div>
  </div>
</section>
